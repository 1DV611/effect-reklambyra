<div class="card dashboard-content-place">

    <!--- Välj en kund --->
    <div class="report-settings">
        <form id="customer-statistics" method="post" action="/user/updatesettings">
            <div class="customer-container">
                <div class="customer-label">
                    <span>Kund </span>
                </div>
                <div class="customer-input">
                    <input class="form-control" id="customer" name="customer" type="text" placeholder="kundens namn - autocomplete" value="byggaute" />
                </div>
            </div>

            <!--- Visa möjliga medier för kund: --->

            <div class="social-container">
                <div class="social-name"><span>AddThis</span></div>
                <div class="social-switch">
                    {{#if medias.0.isActive}}
                        <input id="addthis" name="addthis" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                    {{else}}
                        <input id="addthis" name="addthis" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                    {{/if}}
                    <label for="addthis"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>Facebook</span></div>
                <div class="social-switch">
                    {{#if medias.1.isActive}}
                        <input id="facebook" name="facebook" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                        {{else}}
                            <input id="facebook" name="facebook" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                        {{/if}}
                        <label for="facebook"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>Google</span></div>
                <div class="social-switch">
                    {{#if medias.2.isActive}}
                        <input id="google" name="google" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                    {{else}}
                        <input id="google" name="google" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                    {{/if}}
                    <label for="google"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>Instagram</span></div>
                <div class="social-switch">
                    {{#if medias.3.isActive}}
                        <input id="instagram" name="instagram" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                    {{else}}
                        <input id="instagram" name="instagram" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                    {{/if}}

                    <label for="instagram"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>LinkedIn</span></div>
                <div class="social-switch">
                    {{#if medias.4.isActive}}
                        <input id="linkedin" name="linkedin" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                    {{else}}
                        <input id="linkedin" name="linkedin" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                    {{/if}}
                    <label for="linkedin"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>Twitter</span></div>
                <div class="social-switch">
                    {{#if medias.7.isActive}}
                        <input id="twitter" name="twitter" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                    {{else}}
                        <input id="twitter" name="twitter" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                    {{/if}}
                    <label for="twitter"></label>
                </div>
            </div>
            <div class="social-container">
                <div class="social-name"><span>Tynt/33across</span></div>
                <div class="social-switch">
                    {{#if medias.6.isActive}}
                        <input id="tynt" name="tynt" class="cmn-toggle cmn-toggle-round" type="checkbox" checked onClick="openExternalAuth(this.name, this.checked)">
                        {{else}}
                            <input id="tynt" name="tynt" class="cmn-toggle cmn-toggle-round" type="checkbox" onClick="openExternalAuth(this.name, this.checked)">
                        {{/if}}
                        <label for="tynt"></label>
                </div>
            </div>

            <div class="left-button-div">
                <input class="btn btn-default" type="submit" value="Save"/>
            </div>
        </form>
    </div>
</div>

<script>
    function openExternalAuth(name, activate) {
          var path = '../auth' + name;
          if (activate) {
              window.open('../auth/' + name);
          }
    }
</script>
